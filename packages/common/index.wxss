/* 字体大小 */
.x-font-size{font-size: 24rpx;}
.x-font-size1{font-size: 30rpx;}
.x-font-size2{font-size: 36rpx;}
.x-weight{font-weight: 600;}
/* 圆角 */
.x-round {border-radius: 50%;}
.x-radius{border-radius: 12rpx;}
.x-circle{border-radius:46px}
/* -- 阴影 -- */
.x-shadow {box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);}
.x-shadow-lg {box-shadow: 0rpx 40rpx 100rpx 0rpx rgba(0, 0, 0, 0.07);}
/* flex布局 */
.x-flex{display: flex;display: -webkit-flex;box-sizing: border-box;}
.x-flex-item-center{align-items: center;}
.x-flex-center-center{justify-content: center;}
.x-flex-image{width: 100px;height: 100px;}
.x-flex-wrap{flex-wrap: wrap;}
.x-file-item{flex: 1;}
.x-flex-item-center{align-items: center;}
.x-text-center{text-align: center;}
/* line */
.x-inline{display:inline-block}
/* 外边距 */
.x-margin{margin: 10rpx;}
.x-margin1{margin: 10rpx 22rpx;}
.x-margin2{margin: 24rpx;}
/* 固定定位 */
.bottom_fixed{
  position:fixed;bottom:0;left:0;right:0;
  border-top:1px solid #f3f3f3;
}
/* 相对定位 */
.x-relative{position: relative;}
.x-absolute{position: absolute;}
/* 分隔线 */
.bottom-line::after{content:'';bottom:0;left:30rpx;right:30rpx;pointer-events:none;box-sizing:border-box;border-bottom:1px solid #e9eaec;position: absolute;}
.x-image{width:100%;height:100%;}
.x-line-between{height:16rpx;background:#F6F6F6;}
.article_row1,.article_row2,.article_row3{display: -webkit-box;-webkit-box-orient: vertical;text-overflow:ellipsis;overflow: hidden;word-wrap: break-word;}
.article_row1{-webkit-line-clamp:1;}
.article_row2{-webkit-line-clamp:2;}
.article_row3{-webkit-line-clamp:3;}
.width_100{width: 100%;}
.height_100{height: 100%;}